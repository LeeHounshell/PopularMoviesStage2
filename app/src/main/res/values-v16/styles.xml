<?xml version="1.0" encoding="utf-8"?>
<resources>

        <style name="nodata_text_style">
                <item name="android:fontFamily">sans-serif-medium</item>
                <item name="android:gravity">center</item>
                <item name="android:textColor">@color/orange</item>
                <item name="android:textSize">31sp</item>
                <item name="android:text">@string/nodata</item>
                <item name="android:textStyle">bold</item>
        </style>

        <style name="missing_art_style">
                <item name="android:gravity">center</item>
                <item name="android:layout_gravity">center</item>
                <item name="android:layout_margin">3dp</item>
                <item name="android:padding">3dp</item>
                <item name="android:ellipsize">end</item>
                <item name="android:fadingEdge">horizontal</item>
                <item name="android:fontFamily">sans-serif-medium</item>
                <item name="android:lines">7</item>
                <item name="android:textSize">15sp</item>
                <item name="android:textStyle">bold</item>
        </style>

        <style name="movie_title_style">
                <item name="android:layout_gravity">center</item>
                <item name="android:layout_margin">3dp</item>
                <item name="android:ellipsize">end</item>
                <item name="android:fadingEdge">horizontal</item>
                <item name="android:fontFamily">sans-serif-medium</item>
                <item name="android:gravity">top|center_horizontal</item>
                <item name="android:lines">3</item>
                <item name="android:padding">3dp</item>
                <item name="android:textSize">12sp</item>
                <item name="android:textStyle">bold</item>
                <item name="android:textColor">@android:color/black</item>
        </style>

        <style name="detail_title_style">
                <item name="android:layout_weight">1</item>
                <item name="android:fontFamily">sans-serif-medium</item>
                <item name="android:gravity">center</item>
                <item name="android:textColor">@android:color/white</item>
                <item name="android:textSize">19sp</item>
                <item name="android:textStyle">bold</item>
        </style>

        <style name="detail_releasedate_style">
                <item name="android:layout_gravity">top|center</item>
                <item name="android:fontFamily">sans-serif-medium</item>
                <item name="android:gravity">top|center</item>
                <item name="android:lines">1</item>
                <item name="android:textColor">@android:color/holo_red_light</item>
                <item name="android:textSize">17sp</item>
                <item name="android:textStyle">normal</item>
        </style>

        <style name="detail_plot_style">
                <item name="android:layout_gravity">left</item>
                <item name="android:layout_margin">3dp</item>
                <item name="android:fontFamily">sans-serif-medium</item>
                <item name="android:gravity">left</item>
                <item name="android:padding">3dp</item>
                <item name="android:textColor">@android:color/black</item>
                <item name="android:textSize">15sp</item>
                <item name="android:textStyle">normal</item>
        </style>

</resources>